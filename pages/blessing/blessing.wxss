.arrow {
  position: fixed;
  width: 51rpx;
  height: 32rpx;
  bottom: 30rpx;
  left: 50%;
  margin-left: -25.5rpx;
  animation: transArrow 1s infinite;
  -webkit-animation: transArrow 1s infinite;
}

.arrow image {
  width: 51rpx;
  height: 32rpx;
}

@keyframes transArrow {
  0% {
    bottom: 30rpx;
    opacity: 1;
  }

  50% {
    bottom: 80rpx;
    opacity: 0;
  }

  100% {
    bottom: 30rpx;
    opacity: 0;
  }
}

@-webkit-keyframes transArrow {
  0% {
    bottom: 30rpx;
    opacity: 1;
  }

  50% {
    bottom: 80rpx;
    opacity: 0;
  }

  100% {
    bottom: 30rpx;
    opacity: 0;
  }
}

@keyframes opacity1 {
  0% {
    opacity: 0;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    opacity: 1;
  }
}

@-webkit-keyframes opacity1 {
  0% {
    opacity: 0;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    opacity: 1;
  }
}

/*图片遮罩层渐渐隐藏*/

@keyframes opacity2 {
  0% {
    opacity: 1;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    opacity: 0;
  }
}

@-webkit-keyframes opacity2 {
  0% {
    opacity: 1;
  }

  50% {
    opacity: 0.5;
  }

  100% {
    opacity: 0;
  }
}

/*图片渐渐放大*/

@keyframes animatePhoto {
  0% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
  }

  50% {
    transform: scale(1);
    -webkit-transform: scale(1);
  }

  100% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
  }
}

@-webkit-keyframes animatePhoto {
  0% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
  }

  50% {
    transform: scale(1);
    -webkit-transform: scale(1);
  }

  100% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
  }
}


