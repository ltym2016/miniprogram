.swiperBox {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
}

.baswiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.swiper-item .bg {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}

.swiperBox .photo {
  position: absolute;
  z-index: 1;
  transform: scale(1.1);
  -webkit-transform: scale(1.1);
  opacity: 0;
}

.swiperBox .photo.animate {
  animation: animatePhoto 3s infinite, opacity1 3s forwards;
  -webkit-animation: animatePhoto 3s infinite, opacity1 3s forwards;
}

.swiperBox .photo image {
  width: 100%;
  height: 100%;
}

.swiperBox .photoCover {
  position: absolute;
  z-index: 2;
  opacity: 1;
}

.swiperBox .photoCover image {
  width: 100%;
  height: 100%;
}

.swiperBox .photoCover.animate {
  animation: opacity2 2s 3s ease forwards;
  -webkit-animation: opacity2 2s 3s ease forwards;
}

.operateBox {
  padding: 0 50rpx;
  position: fixed;
  left: 0px;
  bottom: 126rpx;
  width: 100%;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  z-index: 99;
}

.operateBox .btn1 {
  width: 120rpx;
  height: 120rpx;
  cursor: pointer;
}

.operateBox .btn2 {
  width: 280rpx;
  height: 120rpx;
  cursor: pointer;
  padding: 0px;
  background: 0 none;
}

.operateBox .btn1 image {
  width: 100%;
  height: 100%;
  cursor: pointer;
}

.operateBox .btn2 image {
  width: 100%;
  height: 100%;
  cursor: pointer;
}

.operateBox .operabot {
  margin-top: 88rpx;
}

.operateBox .btnDot {
  animation: enlarge 1s infinite;
  -webkit-animation: enlarge 1s infinite;
}

.operateBox .btnChange {
  animation: Animatechange 2s infinite;
  -webkit-animation: Animatechange 2s infinite;
}

@keyframes enlarge {
  0% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  50% {
    -webkit-transform: scale(1.1);
    transform: scale(1.1);
  }

  100% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

@-webkit-keyframes enlarge {
  0% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }

  50% {
    -webkit-transform: scale(1.1);
    transform: scale(1.1);
  }

  100% {
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

@keyframes Animatechange {
  20% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
  }

  60% {
    transform: scale(0.9) translateY(-20px);
    -webkit-transform: scale(0.9) translateY(-20px);
  }

  100% {
    transform: scale(1);
    -webkit-transform: scale(1);
  }
}

@-webkit-keyframes Animatechange {
  20% {
    transform: scale(1.1);
    -webkit-transform: scale(1.1);
  }

  60% {
    transform: scale(0.9) translateY(-20px);
    -webkit-transform: scale(0.9) translateY(-20px);
  }

  100% {
    transform: scale(1);
    -webkit-transform: scale(1);
  }
}

